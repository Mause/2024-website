---
import type { CollectionEntry } from "astro:content"
export type Props = {
  sponsor: CollectionEntry<"sponsors">
}
const { sponsor } = Astro.props as Props
const { Content } = await sponsor.render()
---

<p id={sponsor.slug}>
  {
    sponsor.data.url ? (
      <a href={sponsor.data.url}>
        <img
          src={`/sponsor-logos/${sponsor.data.logo}`}
          class="sponsorlogo"
          alt={sponsor.name}
        />
      </a>
    ) : (
      <img
        src={`/sponsor-logos/${sponsor.data.logo}`}
        class="sponsorlogo"
        alt={sponsor.name}
      />
    )
  }
  
</p>

<Content />

